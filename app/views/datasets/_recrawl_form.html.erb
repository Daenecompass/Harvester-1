<%= form_tag datasets_recrawl_items_path do |f| %>
  <%= check_box_tag('check_all') %><br />
  <% @dataset.terms.each do |selector| %>
    <%= check_box_tag 'selectors_to_recrawl[]', selector.id, false, class: 'selector_checkbox' %>
    <%= label_tag gen_checkbox_label(selector) %>
    <br />
    <% end %>
    <hr>
    Enter the frequency with which these selectors should be recrawled.<br />
    <%= number_field_tag 'recrawl_frequency' %><%= label_tag "times per: "%>
    
    <%= radio_button_tag 'recrawl_interval', 'once' %><%= label_tag "only now" %>
    <%= radio_button_tag 'recrawl_interval', 'minute' %><%= label_tag "minute" %>
    <%= radio_button_tag 'recrawl_interval', 'hour' %><%= label_tag "hour" %>
    <%= radio_button_tag 'recrawl_interval', 'day' %><%= label_tag "day" %>
    <%= radio_button_tag 'recrawl_interval', 'week' %><%= label_tag "week" %>
    <%= radio_button_tag 'recrawl_interval', 'month' %><%= label_tag "month" %>
    <%= radio_button_tag 'recrawl_interval', 'year' %><%= label_tag "year" %>
    
    <%= hidden_field_tag 'collection', @dataset.id %><br /><br />
    <%= submit_tag "Re-Crawl" %>
    
<% end %>
