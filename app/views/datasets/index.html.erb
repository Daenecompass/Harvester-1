<% if params['notice'] %>
<div class="wrapper">
  <div class="app-notice"><%= params['notice'] %></div>
</div>
<% end %>

<div class="wrapper">
  <div class="app-title">
    <h1>Your Harvests</h1>
    <a href="/datasources/"><i class="icon-plus"></i> New Dataset</a>
  </div>
  <h2>Number of Results Harvested: <%= get_overall_count %></h2>
  <% @datasets.each do |dataset| %>
 
  <h3><%= dataset.name %></h3>
  <h3>Count: <%= get_count_per_dataset(dataset) %></h3>

    View:
    <a class="button info" href="/datasets/<%= dataset.id %>">Dataset</a><br>
    <a class="button info" href="http://localhost:3000">Looking Glass</a>
    <hr>

  <% end %>

</div>
